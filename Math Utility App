package randomclass;
import java.util.Scanner;
public class MathApp {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
        int choice;

        do {
            System.out.println("\n Java Math Utility App ");
            System.out.println("--------------------------");
            System.out.println("1. Power (a^b)");
            System.out.println("2. Square Root");
            System.out.println("3. Absolute Value");
            System.out.println("4. Rounding");
            System.out.println("5. Floor and Ceil");
            System.out.println("6. Show Constants (PI & E)");
            System.out.println("0. Exit");
            System.out.print(" Enter your choice: ");
            choice = scanner.nextInt();

            switch (choice) {
                case 1:
                    System.out.print("Enter base: ");
                    double base = scanner.nextDouble();
                    System.out.print("Enter exponent: ");
                    double exponent = scanner.nextDouble();
                    System.out.println("Result: " + Math.pow(base, exponent));
                    break;

                case 2:
                    System.out.print("Enter number: ");
                    double num = scanner.nextDouble();
                    System.out.println("Square root: " + Math.sqrt(num));
                    break;

                case 3:
                    System.out.print("Enter number: ");
                    double absNum = scanner.nextDouble();
                    System.out.println("Absolute value: " + Math.abs(absNum));
                    break;

                case 4:
                    System.out.print("Enter decimal number: ");
                    double roundNum = scanner.nextDouble();
                    System.out.println("Rounded: " + Math.round(roundNum));
                    break;

                case 5:
                    System.out.print("Enter decimal number: ");
                    double dec = scanner.nextDouble();
                    System.out.println("Floor: " + Math.floor(dec));
                    System.out.println("Ceil: " + Math.ceil(dec));
                    break;

                case 6:
                    System.out.println("PI: " + Math.PI);
                    System.out.println("E: " + Math.E);
                    break;

                case 0:
                    System.out.println(" Exiting... Thank you!");
                    break;

                default:
                    System.out.println("Invalid choice. Please try again.");
            }
        } while (choice != 0);

        scanner.close();

		
	}

}

